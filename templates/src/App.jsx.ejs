import { Route, Routes, BrowserRouter as Router } from 'react-router-dom'
// import { Route, Routes, HashRouter as Router } from 'react-router-dom'

<% if (includeRedux) { %>
  import { Provider } from 'react-redux'
  import { store } from './store/store'
  <% } %>
import { <%= entityName.charAt(0).toUpperCase() + entityName.slice(1) %>Index } from './pages/<%= entityName.charAt(0).toUpperCase() + entityName.slice(1) %>Index'
import { HomePage } from './pages/HomePage'
import { <%= entityName.charAt(0).toUpperCase() + entityName.slice(1) %>Details } from './pages/<%= entityName.charAt(0).toUpperCase() + entityName.slice(1) %>Details'
import { <%= entityName.charAt(0).toUpperCase() + entityName.slice(1) %>Edit } from './pages/<%= entityName.charAt(0).toUpperCase() + entityName.slice(1) %>Edit'
import './style/main.scss'
import { AppFooter } from './cmps/AppFooter'
import { About } from './pages/About'
import { AppHeader } from './cmps/AppHeader'


export function App() {
  return (
    <% if (includeRedux) { %><Provider store={store}><% } %>
      <Router>
        <section className='main-container grid'>
          <AppHeader />
          <Routes>
            <Route path='/' element={<HomePage />} />
            <Route path='/about' element={<About />} />
            <Route path='/<%= entityName %>s' element={<<%= entityName.charAt(0).toUpperCase() + entityName.slice(1) %>Index />} />
            <Route path='/<%= entityName %>s/:<%= entityName %>Id' element={<<%= entityName.charAt(0).toUpperCase() + entityName.slice(1) %>Details />} />
            <Route path="/<%= entityName %>s/edit" element={<<%= entityName.charAt(0).toUpperCase() + entityName.slice(1) %>Edit />} />
            <Route path="/<%= entityName %>s/edit/:<%= entityName %>Id" element={<<%= entityName.charAt(0).toUpperCase() + entityName.slice(1) %>Edit />} />
          </Routes>
          <AppFooter />
        </section>
      </Router>
      <% if (includeRedux) { %> </Provider ><% } %>
  )


}
